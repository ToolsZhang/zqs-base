{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "lib": [
      "esnext"
    ],
    "noImplicitAny": false,
    "inlineSourceMap": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    ".tmp",
    "build"
  ]
}